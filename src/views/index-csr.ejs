<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>To Do App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
        integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/style.css">


</head>

<body class="bg-light">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-2 ">
        <div class="col-4 ms-3">
            <h3 class="fw-bold text-primary mt-2">
                <i class="fa fa-list-check me-2"></i>Task Manager
            </h3>
        </div>
        <div class="bg-success col-4 br-2 mt-1">
            <marquee behavior="scroll" direction="left" scrollamount="8" class="h2 mt-2">
                Thakur Naman Raghuvanshi 
            </marquee>
        </div>
        <div class="col-4 me-5">
            <button id="themeToggle"
                class="btn btn-outline-secondary me-5 mt-3 btn-sm rounded-circle d-flex align-items-center justify-content-center position-absolute top-0 end-0 m-2"
                style="width: 40px; height: 40px;">
                ðŸŒ™
            </button>
        </div>
    </div>



    <!-- CREATE TASK -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="fw-bold text-primary mb-3">
                <i class="fa fa-plus-circle me-1"></i> Create Task
            </h5>
            <!-- Task Add Form -->
            <form class="form-submit row g-3" action="/create-task" method="post">
                <div class="col-md-7">

                    <!-- <label for="taskInput" class="form-label fw-semibold">Create Task</label> -->
                    <!-- <input type="text" id="taskInput" name="task" class="form-control"
                                    placeholder="Enter your task"> -->

                    <textarea id="tiny" name="task" class="form-control"></textarea>
                </div>
                <div class="col-md-3">

                    <label for="dueDateInput">Due Date</label>
                    <input type="date" id="dueDateInput" name="dueDate" class="form-control"
                        placeholder="Enter Due Date">
                </div>

                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary btn-sm mt-md-3">
                        <i class="fa fa-plus"></i> Add Task
                    </button>
                </div>
            </form>
        </div>
    </div>


    <!-- FILTER BAR -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-6">
                    <h6 class="fw-semibold text-muted mb-2">Task Working Status</h6>
                    <div class="btn-group btn-group-sm flex-wrap">
                        <button class="btn btn-outline-info statusBtn" data-url="/status/filter/all">All
                            Task</button>
                        <button class="btn btn-outline-secondary statusBtn" data-url="/status/filter/pending">Pending
                            Task</button>
                        <button class="btn btn-outline-primary statusBtn" data-url="/status/filter/working">Working
                            Task</button>
                        <button class="btn btn-outline-warning statusBtn" data-url="/status/filter/pause">Pause
                            Task</button>
                        <button class="btn btn-outline-dark statusBtn" data-url="/status/filter/testing">Testing
                            Task</button>
                        <button class="btn btn-outline-success statusBtn" data-url="/status/filter/done">Done
                            Task</button>
                    </div>
                </div>

                <div class="col-md-4">
                    <h6 class="fw-semibold text-muted mb-2">Task Timeline</h6>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-primary dateStatusBtn" data-url="/day/status/filter/today">Today
                            Task</button>
                        <button class="btn btn-outline-primary dateStatusBtn" data-url="/day/status/filter/week">This
                            week Task</button>
                        <button class="btn btn-outline-primary dateStatusBtn" data-url="/day/status/filter/month">This
                            Month Task</button>
                    </div>
                </div>

                <div class="col-md-2">
                    <h6 class="fw-semibold text-muted mb-2">Task Priority</h6>
                    <div class="btn-group btn-group-sm">
                        <button class="btn btn-outline-danger priorityStatusBtn"
                            data-url="/priority/status/filter/High">High</button>
                        <button class="btn btn-outline-warning priorityStatusBtn"
                            data-url="/priority/status/filter/Medium">Medium</button>
                        <button class="btn btn-outline-success priorityStatusBtn"
                            data-url="/priority/status/filter/Low">Low</button>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- table -->
    <div class="card shadow-lg border-0 position-relative">
        <div class="card-body">
            <!-- your content -->
            <div class="card shadow-lg border-0 position-relative">
                <div class="card-body">
                    <!-- Task Table -->
                    <div class="table-responsive mt-1">
                        <table class="table table-hover align-middle text-center" id="tasks-table">
                            <thead class="table-primary">
                                <tr>
                                    <th scope="col">S. No.</th>
                                    <th scope="col">Task</th>
                                    <th scope="col">Add Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Priority</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Dynamic rows go here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Update Task Modal -->
        <div class="modal fade" id="task-modal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="taskModalLabel">Update Task</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form class="modal-form-submit" method="post">
                            <div class="mb-3">
                                <label for="updateTaskInput" class="form-label">Edit Task</label>
                                <input type="text" id="updateTaskInput" name="task" class="form-control"
                                    placeholder="Enter updated task">


                                <!-- <textarea id="tiny" id="updateTaskInput" name="task" class="form-control"></textarea> -->

                            </div>
                            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="js/script.js"></script>
    <script>
        getResults('/get-tasks');
    </script>



    <!--tinyCDN for text area -->
    <script src="https://cdn.tiny.cloud/1/un8bj2064z2j3lpirvxtrau6lmah3cl2p63sxwr4d4un9r2u/tinymce/8/tinymce.min.js"
        referrerpolicy="origin" crossorigin="anonymous"></script>



    <!-- for tiny textarea -->
    <script>
        tinymce.init({
            selector: 'textarea#tiny',
            height: 150,
            menubar: false,     // ðŸ‘ˆ File Edit View Insert Format sab gayab
            statusbar: false,   // ðŸ‘ˆ neeche wali bar bhi hat jayegi
            branding: false,    // ðŸ‘ˆ "Powered by Tiny" hatane ke liye
            placeholder: 'Write your task',   // ðŸ‘ˆ yahi chahiye tha
        });
    </script>

    <script>

        // Prevent Bootstrap dialog from blocking focusin
        document.addEventListener('focusin', (e) => {
            if (e.target.closest(".tox-tinymce, .tox-tinymce-aux, .moxman-window, .tam-assetmanager-root") !== null) {
                e.stopImmediatePropagation();
            }
        });
    </script>
</body>

</html>